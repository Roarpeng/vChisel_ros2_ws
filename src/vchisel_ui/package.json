{
  "name": "vchisel-ui",
  "version": "1.0.0",
  "description": "vChisel视觉凿击系统 - 控制界面",
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "lint": "eslint src --ext ts,tsx",
    "preview": "vite preview"
  },
  "keywords": [
    "vchisel",
    "ros2",
    "electron",
    "vision",
    "industrial"
  ],
  "author": "vChisel Team",
  "license": "Apache-2.0",
  "dependencies": {
    "roslib": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.1.1",
    "recharts": "^2.10.3",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/roslib": "^1.3.2",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.bosch.vchisel",
    "productName": "vChisel",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  }
}
